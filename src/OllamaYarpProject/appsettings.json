{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "OllamaYarpProject": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "ollama": {
        "ClusterId": "ollamaCluster",
        "Match": {
          "Path": "/{**catch-all}"
        },
         "Transforms": [
          {
            "RequestHeader": "Authorization",
            "Set": "Bearer sk-1234"
          }
        ]
      }
    },
    "Clusters": {
      "ollamaCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:4000/"
          }
        }
      }
    }
  },
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 2147483648,
      "KeepAliveTimeout": "00:10:00",
      "RequestHeadersTimeout": "00:10:00"
    },

    "Endpoints": {

      "Http": {
        "Url": "http://0.0.0.0:11434"

      }
    }
  }
}
